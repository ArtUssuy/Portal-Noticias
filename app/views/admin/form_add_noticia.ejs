<html>
<head>
	<title></title>
</head>
<body>

	<h1>Formulário de inclusão de notícias</h1>

	<% if(validacao) { %>
		<ul>
			<% for(var i = 0  ; i < validacao.length ; i++) { %>
			<li>
				<%= validacao[i].msg %>
			</li>
			<% } %>
		</ul>
	<% } %>


	<form method='post' action='/noticias/salvar'>

		<label>Título da notícia</label>
		<input type='text' name='titulo' value='<%= noticia.titulo %>'>
		<br>

		<label>Resumo da notícia</label>
		<input type='text' name='resumo' value='<%= noticia.resumo %>'>
		<br>

		<label>Autor da notícia</label>
		<input type='text' name='autor' value='<%= noticia.autor %>'>
		<br>

		<label>data da notícia</label>
		<input type='date' name='data_noticia' value='<%= noticia.data_noticia %>'>
		<br>

		<label>Título da notícia</label>
		<textarea type='text' name='noticia' cols='30' rows='5'><%= noticia.noticia %></textarea>
		<br>				
		
		<input type='submit' value='Enviar'>

	</form>	

</body>
</html>